{% import 'macro/wpml_switch.twig' as wpml_switch %}
{% import "macro/menu_items.twig" as menu_items %}
{% import "macro/responsive_image.twig" as rImage %}
{% import 'macro/edit-link.twig' as editLink %}
{% import 'macro/section.twig' as section %}

<!DOCTYPE html>
<html>
    <head>
        <link rel="shortcut icon" href="{{ theme.path }}/img/favicon.png" />
        <meta http-equiv="Content-Type" content="text/html;charset=utf-8" />
        <title>{{ wp_title }}</title>
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <meta name="code-by" content="2046.cz" />
        <!-- web coded by http://2046.cz -->
        <!-- some code licensed under Aggressive Copyright http://aggressive-copyright.org -->

        <!--[if lt IE 9]>
            <script src="{{ theme.path }}/js/vendor/respond.min.js"></script>
        <![endif]-->
        {{ wp_head }}
    </head>
    <body class="{{ body_class }}">
        {{ editLink.input(post) }}
        {% block top_menu %}
            <div class="container">
                <div class="row">
                    <div class="col-12" id="top">
            			<a href="{{ site.url }}" id="logo">
            				<img src="{{ theme.path }}/img/arnika-org-logo.svg" alt="{{ site.title }}">
            			</a>
                        <nav class="navbar navbar-expand-sm" role="navigation">
            				{{ menu_items.input(top_menu, 'top_menu') }}
            			</nav>
            			<button class="navbar-toggler collapsed" data-toggle="collapse" data-target="#top_menu" aria-controls="top_menu" aria-expanded="false" aria-label="Toggle navigation">
            				<span></span>
            				<span></span>
            				<span></span>
            			</button>
                    </div>
                </div>
            </div>
        {% endblock %}

        {% block content %}
        {% endblock %}

        <div class="container">
            <div class="row">
                <div class="col-12 col-sm-8 sparse_content">
                    {% block sparseContent %}
                    {% endblock %}
                </div>
                <div class="col-12 col-sm-4">
                    {% block aside %}
                    {% endblock %}
                </div>
            </div>
        </div>

        <div class="container publications">
            <div class="row">
                {% set publications_view = footer.get_field('publications') %}
                <div class="col-12 col-sm-4">
                    <h4 class="_h">
                        {{ publications_view.heading }}
                    </h4>
                    <div class="description">
                        {{ publications_view.description|wpautop }}
                    </div>
                    {% if publications_view.button_heading and publications_view.button_link %}
                        <a href="{{ publications_view.button_link }}" class="btn-primary sml">
                            {{ publications_view.button_heading }}
                        </a>
                    {% endif %}
                </div>
                <div class="col-12 col-sm-8">
                    <div class="row">
                        {% for item in publications_view.selected %}
                            <div class="col-6 col-sm-{{ 12 / publications_view.selected|length * 2 }}  col-md-{{ 12 / publications_view.selected|length }}">
                                <a href="{{ item.link }}">
                                    {{ rImage.input(item.thumbnail, 300,450, item.title) }}
                                </a>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
        <div class="main_sections">
            <div class="container">
                <div class="row">
                    {% for item in footer.get_field('main_sections') %}
                        <div class="col-12 col-sm-6 col-md-3">
                            {{ section.input(item, 'h3') }}
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
        <div class="footer">
            <div class="container">
                <div class="row">
                    <div class="col-12 col-sm-2 logo_holder">
                        <a href="#top">
                            <img src="{{ theme.path }}/img/arnika-org-logo.svg" alt="{{ site.name }}">
                        </a>
                    </div>
                    <div class="col-12 col-sm-10 footer_body">
                        <div class="row">
                            {% for item in footer.get_field('cols') %}
                                <div class="col-12 col-sm-4">
                                    <div class="in">
                                        {{ item.content|wpautop }}
                                    </div>
                                </div>
                            {% endfor %}
                            <div class="col-12 col-sm-4 d-flex btn_holder">
                                <div class="in">
                                    <a href="{{ footer.button_link }}" class="btn-primary" target="_blank">
                                        {{ footer.button_heading }}
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-12 col-sm-10 offset-sm-2 motto">
                    <h4>
                        {{ footer.motto }}
                    </h4>
                </div>
            </div>
        </div>

    {{wp_footer}}
    </body>
</html>
