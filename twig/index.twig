{% extends 'base.twig' %}

{% block content %}
	<div class="container">
		<div class="row col-12">
			<h1>{{ post.title }}</h1>	
		</div>
		<span class="terms">
		    {% for term in post.terms %}
				<a href="{{ fn('get_term_link', term.id, 'category') }}">
					{{ term.title }}
				</a>{{ loop.last ? '' : ', ' }}
		    {% endfor %}
	    </span>
	</div>
{% endblock %}
